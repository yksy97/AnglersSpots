<div class="container mt-5">
<div class="row">
<div class="col-12">
  
  <!-- 管理者専用アラート -->
  <% if admin_signed_in? %>
  <div class="alert alert-warning" role="alert">
    <strong>注意：</strong> こちらは管理者専用画面です
  </div>
  <% end %>
  <h1 class="mb-4 text-center">コメント一覧</h1>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col" class="text-center">コメント内容</th>
        <th scope="col" class="text-center">投稿者</th>
        <th scope="col"></th>
      </tr>
    </thead>
      <tbody>
        <% if @comments.empty? %>
          <tr>
            <td colspan="3" class="text-center">コメントがありません</td>
          </tr>
        <% else %>
          <% @comments.each do |comment| %>
            <tr>
              <td class="break-word"><%= comment.comment %></td>
              <td class="break-word"><%= comment.customer.email %></td>
              <td class="text-center">
                <%= link_to '管理者権限で削除', admin_post_comment_path(comment), method: :delete, data: { confirm: 'このコメントを削除しますか？' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
  </table>

</div>
</div>
</div>
