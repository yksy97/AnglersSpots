<div class="container mt-5">
 <!-- 管理者専用アラート -->
 <% if admin_signed_in? %>
    <div class="alert alert-warning" role="alert">
      <strong>注意：</strong> こちらは管理者専用画面です
    </div>
  <% end %>
  <!-- 投稿一覧セクション -->
  <div class="col-md-12">
    <h3 class="text-center"><%= @customer.name %> さんの投稿一覧</h3>
    <%= render "admin/posts/posts", posts: @posts %>
  </div>
  <%= paginate @posts %>
</div>

