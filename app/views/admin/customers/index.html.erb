<div class="container mt-5">
  <div class="row">
    <div class="col-12">
       <% if admin_signed_in? %>
        <!-- 管理者専用アラート -->
        <div class="alert alert-warning" role="alert">
          <strong>注意：</strong> こちらは管理者専用画面です
        </div>
      <% end %>
      <h1 class="mb-4 text-center">会員一覧</h1>
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">名前</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">現在のステータス</th>
            <th scope="col">退会／復活</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= link_to customer.name, admin_customer_posts_path(customer_id: customer.id) %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted %>
                  <span class="btn btn-danger btn-sm">退会済み</span>
                <% else %>
                  <span class="btn btn-success btn-sm">アクティブ</span>
                <% end %>
              </td>

              <td>
                <% if customer.is_deleted %>
                  <%= link_to '復会させる', revive_admin_customer_path(customer), method: :patch, class: 'btn btn-success btn-sm' %>
                <% else %>
                  <%= link_to '退会させる', retire_admin_customer_path(customer), method: :patch, data: { confirm: '本当に退会させますか？' }, class: 'btn btn-danger btn-sm' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @customers %>
</div>
