<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <!-- 管理者専用アラート -->
      <% if admin_signed_in? %>
        <div class="alert alert-warning" role="alert">
          <strong>注意：</strong> こちらは管理者専用画面です
        </div>
      <% end %>
      <h1 class="mb-4 text-center">タックル一覧</h1>
      <table class="table table-striped table-bordered">
        <colgroup>
          <col style="width: 30%;">
          <col style="width: 70%;">
        </colgroup>
          <thead class="thead-dark">
            <tr>
              <th scope="col" class="text-center">アイテム</th>
              <th scope="col" class="text-center">詳細</th>
            </tr>
          </thead>
        <tbody>
          <% @tackle.tackle_lists.order(order: :asc).each do |tl| %>
            <tr>
              <td><%= tl.tackle_item.name %></td>
              <td><%= tl.item_name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
