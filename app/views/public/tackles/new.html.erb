<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <div class="row">
            <!--会員情報-->
             <%= render 'public/customers/customer_section', customer: current_customer %>
          </div>
        </div>
      </div>
    </div>
  </div>

<!-- タックル新規登録 -->
<div class="col-md-8 mx-auto">
  <div class="card">
    <!--カードヘッダー-->
    <div class="card-header d-flex justify-content-center" style="background-color: #AFDFE4;">
      <h3>新規タックル登録</h3>
    </div>

    <!--カードボディ-->
    <div class="card-body">
      <%= form_with model: @tackle, local: true do |f| %>
        <%= hidden_field_tag :post_id, params[:post_id] %>
        <!--タックル-->
        <div class="form-group">
          <%= f.label :name, "タックル名" %>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>
        
        <div class="form-group">
          <%= link_to_add_association 'アイテム追加',
                                      # form_withのformタグ変数
                                      f,
                                      # フォームのデータを追加するモデル名
                                      :tackle_lists,
                                      # 追加するフォームの部分テンプレート
                                      partial: "public/tackles/tackle_list_fields",
                                      # オプション
                                      data: {
                                      # フォームを追加する場所の指定
                                      association_insertion_node: '#tackle_list_forms'},
                                      
                                      class: 'btn btn-success'  
          %>
        </div>

        <div id="tackle_list_new_forms"></div>
        
        <%= f.submit "登録する", class: "btn btn-primary" %>
      <% end %>

      <div class="mt-3">
        <h5><%= link_to 'タックル一覧はこちら', tackles_path, class: "text-dark" %></h5>
      </div>

    </div>
  </div>
</div>