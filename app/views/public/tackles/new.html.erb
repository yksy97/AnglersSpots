<div class="container mt-5">
  <div class="d-flex justify-content-end">
    <div class="mb-3">
    <%= search_form_for @q, url: searches_path, class: 'form-inline' do |f| %>
      <%= f.label :rigs_name_or_post_comments_comment_or_genre_name_or_tackle_name_or_tackle_rod_or_tackle_reel_or_tackle_line_or_tackle_bait_cont, "検索ワード", class: 'sr-only' %>
      <%= f.search_field :rigs_name_or_post_comments_comment_or_genre_name_or_tackle_name_or_tackle_rod_or_tackle_reel_or_tackle_line_or_tackle_bait_cont, class: 'form-control', placeholder: "検索ワードを入力" %>
      <%= f.submit '検索', class: 'btn btn-primary ml-2' %>
    <% end %>
  </div>
  </div>
  <div class="row">
    <!-- 会員情報セクション -->
    <div class="col-md-4">
      <%= render 'public/customers/customer_section', customer: @customer %>
    </div>

    <!-- タックル新規登録 -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-center" style="background-color: #AFDFE4;">
          <h3>新規タックル登録</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @tackle, local: true do |form| %>
            <div class="form-group">
              <%= form.label :name, "プリセット名" %>
              <%= form.text_field :name, class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= form.label :rod, "ロッド" %>
              <%= form.text_field :rod, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :reel, "リール" %>
              <%= form.text_field :reel, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :line, "ライン" %>
              <%= form.text_field :line, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :bait, "ベイト" %>
              <%= form.text_field :bait, class: "form-control" %>
            </div>

            <%= form.submit "登録する", class: "btn btn-primary" %>
          <% end %>
          
          <div class="mt-3">
            <h5><%= link_to 'タックル一覧はこちら', tackles_path, class: "text-dark" %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
