<div class="card">
<!--カードヘッダー-->
<div class="card-header card-header d-flex justify-content-center" style="background-color: #AFDFE4;">
  <h2>タックル一覧</h2>
</div>

<!--カードボディ-->
<div class="card-body">
  <table class="table">
    <thead>
      <tr>
      <th>タックル名</th>
      <th>ロッド</th>
      <th>リール</th>
      <th>ライン</th>
      <th>ベイト</th>
      <th></th>
      </tr>
    </thead>
  <tbody>
    <!--タックルが存在すればタックルを表示し、存在しなければメッセージ-->
    <% if tackles.exists? %>
    <% tackles.each do |tackle| %>
    <tr>
      <td><%= tackle.name %></td>
      <td><%= tackle.rod %></td>
      <td><%= tackle.reel %></td>
      <td><%= tackle.line %></td>
      <td><%= tackle.bait %></td>
      <td>
        <%= link_to '編集', edit_tackle_path(tackle), class: 'btn btn-success btn-sm' %>
        <%= link_to '削除', tackle, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
    <% end %>
    <% else %>
    <tr>
    <td colspan="6" class="text-center">登録されたタックルはありません</td>
    </tr>
    <!--21行目の閉じタグ-->
    <% end %>
  </tbody>
  </table>
<%= paginate tackles %>
</div>
</div>