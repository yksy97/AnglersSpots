<div class="container mt-5">
  <div class="row">
    <div class="col-md-4 d-flex flex-column">
      <!-- 会員情報セクション -->
      <div>
        <%= render 'public/customers/customer_section', customer: current_customer %>
      </div>
      
      <!-- 新規タックル登録ボタン -->
      <div class="text-center mt-auto">
        <%= link_to '新規タックル登録', new_tackle_path, class: 'btn btn-primary' %>
      </div>
    </div>

    <!-- タックル一覧 -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header card-header d-flex justify-content-center" style="background-color: #AFDFE4;">
          <h2>タックル一覧</h2>
        </div>
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>プリセット名</th>
                <th>ロッド</th>
                <th>リール</th>
                <th>ライン</th>
                <th>ベイト</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @tackles.each do |tackle| %>
                <tr>
                  <td><%= tackle.name %></td>
                  <td><%= tackle.rod %></td>
                  <td><%= tackle.reel %></td>
                  <td><%= tackle.line %></td>
                  <td><%= tackle.bait %></td>
                  <td>
                    <%= link_to '編集', edit_tackle_path(tackle), class: 'btn btn-success btn-sm' %>
                    <%= link_to '削除', tackle, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
