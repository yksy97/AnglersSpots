<!-- タックルモーダル -->
<div class="modal fade" id="tackleModal" tabindex="-1" role="dialog" aria-labelledby="tackleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">

      <!-- モーダルヘッダー -->
      <div class="modal-header" style="background-color: #AFDFE4;">
        <h5 class="modal-title" id="tackleModalLabel">新規タックル登録</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <!-- モーダルボディ -->
      <div class="modal-body" style="background-color: #f0f9fa;">
        <!-- フォーム -->
        <%= form_with model: Tackle.new, remote: true do |f| %>
          <!-- タックル -->
          <div class="form-group">
            <%= f.label :name, "タックル名" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= link_to_add_association 'アイテム追加',
                                        # form_withのformタグ変数
                                        f,
                                        # フォームのデータを追加するモデル名
                                        :tackle_lists,
                                        # 追加するフォームの部分テンプレート
                                        partial: "public/tackles/tackle_list_fields",
                                        # オプション
                                        data: {
                                        # フォームを追加する場所の指定
                                        association_insertion_node: '#tackle_list_forms'},
                                        
                                        class: 'btn btn-success btn-sm'  
            %>
          </div>

          <div id="tackle_list_forms"></div>

          <div class="d-flex justify-content-between">
            <%= f.submit "登録", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>