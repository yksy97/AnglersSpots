<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h2>新規登録</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'signup-form', class: 'needs-validation', novalidate: '' }) do |f| %>
        
        <div class="form-group mb-3">
          <%= f.label :name, I18n.t('devise.registrations.new.name'), class: 'form-label' %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", required: true %>
          <div class="invalid-feedback">
            <%= I18n.t('errors.messages.invalid_name') %>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email, I18n.t('devise.registrations.new.email'), class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          <div class="invalid-feedback">
            <%= I18n.t('errors.messages.invalid_email') %>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, I18n.t('devise.registrations.new.password'), class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
          <div class="invalid-feedback">
            <%= I18n.t('errors.messages.invalid_password') %>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, I18n.t('devise.registrations.new.password_confirmation'), class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
          <div class="invalid-feedback">
            <%= I18n.t('errors.messages.invalid_password_confirmation') %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit I18n.t('devise.registrations.new.sign_up'), class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!--app/javascript/packsから参照しました-->
<%= javascript_pack_tag 'validations' %>
<!--Ajaxは一度諦めてコメントアウト　%= javascript_pack_tag 'signup' %>-->
<%= javascript_pack_tag 'password_confirmation' %>

