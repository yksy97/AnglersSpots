<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="form-container">
        <h2 class="text-center mb-4">新規登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'signup-form', class: 'needs-validation', novalidate: true }) do |f| %>

          <div class="form-group mb-3">
            <%= f.label :name, I18n.t('devise.registrations.new.name'), class: 'form-label' %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", required: true %>
            <div class="invalid-feedback">入力してください</div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :email, I18n.t('devise.registrations.new.email'), class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
            <div class="invalid-feedback">入力してください</div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, I18n.t('devise.registrations.new.password'), class: 'form-label' %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true, id: "password" %>
            <div class="invalid-feedback">入力してください</div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, I18n.t('devise.registrations.new.password_confirmation'), class: 'form-label' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true, id: "password_confirmation" %>
            <div class="invalid-feedback" id="password-confirm-feedback">パスワードが一致しません</div>
          </div>

          <div class="form-group">
            <%= f.submit I18n.t('devise.registrations.new.sign_up'), class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'sign_up' %>