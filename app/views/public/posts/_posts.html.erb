<% @posts.each do |post| %>
  <div class="card mb-4 shadow-sm">
    <% if post.image.attached? %>
      <%= image_tag post.image, class: "card-img-top img-fluid" %>
    <% else %>
      <%= image_tag 'no_image.jpg', class: "card-img-top img-fluid" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, post_path(post), class: "text-dark" %></h5>
      <p class="card-text"><%= truncate(post.body, length: 100) %></p>
      <div class="d-flex justify-content-between align-items-center">
        <small class="text-muted">
          <%= l post.created_at, format: :custom_short %>
          (<%= time_ago_in_words(post.created_at) %>前)
        </small>
        <!--いいね-->
        <%= render 'public/favorites/btn', post: post %>
        
        <!--リレーショナルシップス-->
        <% if customer_signed_in? && current_customer != post.customer %>
          <% if current_customer.following?(post.customer) %>
            <%= link_to 'フォロー中', customer_relationships_path(customer_id: post.customer, id: current_customer.relationships.find_by(followed_id: post.customer.id)), method: :delete, data: { confirm: 'フォローを解除しますか？' }, class: "btn btn-secondary" %>
          <% else %>
            <%= link_to 'フォローする', customer_relationships_path(customer_id: post.customer), method: :post, class: "btn btn-primary" %>
          <% end %>
        <% end %>

        <small class="text-muted">投稿者: <%= link_to post.customer.name, customer_path(post.customer) %>
          <% if post.customer.image.attached? %>
            <%= image_tag post.customer.image, size: '50x50', class: "ml-2" %>
          <% else %>
            <%= image_tag 'no_image.jpg', size: '50x50', class: "ml-2" %>
          <% end %>
        </small>
      </div>
    </div>
  </div>
<% end %>
