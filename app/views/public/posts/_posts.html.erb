<% @posts.each do |post| %>
  <div class="card mb-4 shadow-sm">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <% if post.customer.image.attached? %>
            <%= image_tag post.customer.image, class: "rounded-circle", style: "width: 30px; height: 30px; object-fit: cover;" %>
          <% else %>
            <%= image_tag 'no_image.jpg', class: "rounded-circle", style: "width: 30px; height: 30px; object-fit: cover;" %>
          <% end %>
          <strong><%= link_to post.customer.name, customer_path(post.customer), class: "ml-2" %></strong>
          <div id="relationship-btn<%= post.customer.id %>">
            <%= render 'public/relationships/test', customer: post.customer %>
          </div>
        </div>
        <h6 class="text-muted"><%= time_ago_in_words(post.created_at) %>前</h6>
      </div>
    </div>

    <div class="d-flex justify-content-between align-items-center ml-4 mt-2">
      <% if post.image.attached? %>
        <%= image_tag post.image, class: "card-img-top img-fluid", style: "max-height: 300px; object-fit: cover; width: auto; margin: auto;" %>
      <% else %>
        <%= image_tag 'no_image.jpg', class: "card-img-top img-fluid", style: "max-height: 300px; object-fit: cover; width: auto; margin: auto;" %>
      <% end %>
    </div>

    <div class="card-body">
      <h5 class="card-title mb-2">
        <i class="fa-solid fa-fish-fins"></i> <%= link_to post.genre.name, post_path(post), class: "text-dark" %>（<%= post.rig %>）
      </h5>
      <p class="card-text">
        <i class="fas fa-anchor mr-2"></i> <%= post.location.presence || "情報なし" %>
      </p>
      <p class="card-text">
        <i class="fa-solid fa-pencil"></i> <%= post.body %>
      </p>
    </div>

    <div class="card-footer d-flex justify-content-between align-items-center">
      <%= render 'public/favorites/btn', post: post %>
      <h6 class="text-muted"><%= l post.created_at, format: :custom_short %></h6>
    </div>
  </div>
<% end %>

