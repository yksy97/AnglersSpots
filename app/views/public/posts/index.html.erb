<div class="container mt-5">
  <div class="row">
    <!-- 会員情報セクション -->
    <div class="col-md-4">
      <%= render 'public/posts/customer_section', customer: current_customer %>
    </div>
    
    <!-- 投稿一覧セクション -->
    <div class="col-md-8">

      <!-- 新規投稿モーダルボタン -->
    <div class="text-center mb-3">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#NewPostModal">新規投稿</button>
    </div>

   <% @posts.each do |post| %>
 <div class="card mb-4 shadow-sm">
    <div class="card-header" style="background-color: #AFDFE4;">
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <% if post.customer.image.attached? %>
            <%= image_tag post.customer.image, class: "rounded-circle", style: "width: 30px; height: 30px; object-fit: cover;" %>
          <% else %>
            <%= image_tag 'no_image.jpg', class: "rounded-circle", style: "width: 30px; height: 30px; object-fit: cover;" %>
          <% end %>
          <strong class="mr-3"><%= link_to post.customer.name, customer_path(post.customer), class: "ml-2 text-dark" %></strong>
          <!--フォローする-->
          <div id="relationship-btn<%= post.customer.id %>">
            <%= render 'public/relationships/customer_follow_btn', customer: post.customer %>
          </div>
        </div>
        <h6><%= l post.created_at, format: :custom_short %>（<%= time_ago_in_words(post.created_at) %>前）</h6>
      </div>
    </div>

    <div class="d-flex justify-content-center align-items-center mt-2" style="background-color: #fcffff">
      <% if post.image.attached? %>
        <%= link_to post_path(post) do %>
          <%= image_tag post.image, class: "card-img-top img-fluid", style: "max-height: 300px; object-fit: cover;" %>
        <% end %>
      <% else %>
        <%= link_to post_path(post) do %>
          <%= image_tag 'no_image.jpg', class: "card-img-top img-fluid", style: "max-height: 300px; object-fit: cover;" %>
        <% end %>
      <% end %>
    </div>

    <div class="card-body">
      <h5 class="card-title">
        <i class="fa-solid fa-fish-fins"></i> <%= link_to post.genre ? post.genre.name : '', post_path(post), class: "text-dark" %>
      </h5>
      <p class="card-text">
        <i class="fas fa-anchor mr-2"></i> <%= post.location.presence || "" %>
      </p>
      <% if post.rigs.present? %>
        <p class="card-text">
          <i class="fa-solid fa-tags mr-2"></i>
          <% post.rigs.each do |rig| %>
            <%= link_to rig.name, posts_path(rig_id: rig) %>
          <% end %>
        </p>
      <% end %>
      <p class="card-text">
        <i class="fa-solid fa-pencil mr-2"></i>
        <div>
          <%= simple_format(post.body, class: "m-0") %>
        </div>
      </p>

    </div>

    <div class="card-footer d-flex justify-content-between align-items-center">
      <h6><%= render 'public/favorites/btn', post: post %></h6>
      <h6><i class="fas fa-comments mr-2 text-warning"></i><%= post.post_comments.count %> 件</h6>
    </div>
  </div>
<% end %>


    </div>
  </div>
</div>

<!-- 新規登録モーダル -->
<%= render 'public/posts/NewPostModal' %>

<%= javascript_pack_tag 'validations' %>
<%= javascript_pack_tag 'input_image' %>