<div class="container mt-4">
  <div class="row">
    <div class="col-md-4">
      <%= render 'public/customers/info', customer: current_customer %>
    </div>

    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2><%= @post.title %></h2>
          <p class="text-muted">投稿日: <%= l @post.created_at, format: :custom_long %></p>
        </div>
        <div class="card-body">
          <p><%= @post.body %></p>

          <!-- コメントフォーム -->
          <%= form_with model: [@post, @post.post_comments.build], local: true, html: { class: 'needs-validation', novalidate: '' } do |f| %>
            <div class="form-group">
              <%= f.label :comment, "コメント" %>
              <%= f.text_area :comment, class: 'form-control', rows: 3, required: true %>
              <div class="invalid-feedback">
                コメントを入力してください。
              </div>
            </div>
            <%= f.submit "コメントを投稿", class: "btn btn-primary" %>
          <% end %>

          <hr>

          <!-- コメントとリプライ一覧 -->
          <div id="comments">
            <% @post.post_comments.where(parent_id: nil).order(created_at: :desc).each do |comment| %>
              <div class="comment">
                <p><i class="fa-regular fa-user"></i><span class="ml-2"><%= comment.customer.name %></span>：<%= comment.comment %></p>
                <p class="text-muted">投稿日: <%= l comment.created_at, format: :custom_long %></p>
                <p><%= link_to "返信", "#", class: "reply-link", data: { comment_id: comment.id } %></p>
                
                <div id="reply-form-<%= comment.id %>" class="reply-form" style="display: none;">
                  <%= form_with model: [@post, @post.post_comments.build(parent_id: comment.id)], local: true do |f| %>
                    <%= f.hidden_field :parent_id %>
                    <%= f.text_area :comment, placeholder: "返信を入力", class: 'form-control', rows: 2 %>
                    <%= f.submit "返信を投稿", class: "btn btn-sm btn-primary" %>
                  <% end %>
                </div>

                <!-- リプライ -->
                <% comment.replies.order(created_at: :desc).each do |reply| %>
                  <div class="reply ml-4 pl-3 mt-2">
                    <div class="name" style="background-color: #d9f6fa; padding-left: 10px;">
                      <i class="fa-regular fa-user"></i><span class="ml-2"><%= reply.customer.name %></span>
                    </div>
                    <div style="background-color: #f8f8f8; padding-left: 15px;">
                      <p><i class="fa-regular fa-comment"></i><span class="ml-2"><%= reply.comment %></span></p>
                      <p class="text-muted" style="color: #6c757d;">返信日: <%= l reply.created_at, format: :custom_long %></p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'reply' %>
