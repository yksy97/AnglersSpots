<div class="container mt-4">
  <div class="row">
    <div class="col-md-4">
      <%= render 'public/customers/info', customer: current_customer %>
    </div>

    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2><%= @post.title %></h2>
          <p class="text-muted">投稿日: <%= l @post.created_at, format: :custom_long %></p>
        </div>
        <div class="card-body">
          <p><%= @post.body %></p>

          <!-- コメントフォーム -->
          <%= form_with model: [@post, @post.post_comments.build], local: true, html: { class: 'needs-validation', novalidate: '' } do |f| %>
            <div class="form-group">
              <%= f.label :comment, "コメント" %>
              <%= f.text_area :comment, class: 'form-control', rows: 3, required: true %>
              <div class="invalid-feedback">コメントを入力してください。</div>
            </div>
            <%= f.submit "コメントを投稿", class: "btn btn-primary" %>
          <% end %>

          <hr>

          <!-- コメントとリプライ一覧 -->
          <div id="comments">
            <% @post.post_comments.where(parent_id: nil).order(created_at: :desc).each do |comment| %>
              <div class="comment mb-3" style="border: 1px solid #dee2e6; border-radius: 10px; background-color: #f8f8f8; padding: 5px 10px;">
                <div style="background-color: #AFDFE4; padding: 3px; border-radius: 5px; display: inline-block;">
                  <span><%= comment.customer.name %>さん</span>
                </div>

                <div class="mt-2" style="border: 1px solid #dee2e6; border-radius: 10px; background-color: #ffffff; padding: 15px;">
                  <span><%= comment.comment %></span>
                  <% if comment.customer == current_customer %>
                    <%= link_to '削除', post_post_comment_path(@post, comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger btn-sm float-right" %>
                  <% end %>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-2">
                  <p><%= link_to "返信", "#", class: "btn btn-primary btn-sm reply-link", data: { comment_id: comment.id } %></p>
                  <p class="text-muted" style="color: #6c757d;">投稿日: <%= l comment.created_at, format: :custom_long %></p>
                </div>
              </div>

              <% comment.replies.order(created_at: :desc).each do |reply| %>
                <div class="reply ml-4 pl-3 mt-2">
                  <div class="comment mb-3" style="border: 1px solid #dee2e6; border-radius: 10px; background-color: #f8f8f8; padding: 5px 10px;">
                    <div style="background-color: #AFDFE4; padding: 3px; border-radius: 5px; display: inline-block;">
                      <span><%= reply.customer.name %>さん</span>
                    </div>

                    <div class="mt-2" style="border: 1px solid #dee2e6; border-radius: 10px; background-color: #ffffff; padding: 15px;">
                      <span><%= reply.comment %></span>
                      <% if reply.customer == current_customer %>
                        <%= link_to '削除', post_post_comment_path(@post, reply), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger btn-sm float-right" %>
                      <% end %>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-2">

                      <p class="text-muted" style="color: #6c757d;">返信日: <%= l reply.created_at, format: :custom_long %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'reply' %>
