<% @my_posts.each do |post| %>
  <div class="card mb-4 shadow-sm">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          投稿者：<strong class="mr-2"><%= link_to post.customer.name, customer_path(post.customer) %></strong>
        </div>
        <h6 class="text-muted"><%= time_ago_in_words(post.created_at) %>前</h6>
      </div>
    </div>
    <% if post.image.attached? %>
      <%= image_tag post.image, class: "card-img-top img-fluid" %>
    <% else %>
      <%= image_tag 'no_image.jpg', class: "card-img-top img-fluid" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, post_path(post), class: "text-dark" %></h5>
      <p class="card-text"><%= truncate(post.body, length: 100) %></p>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
      <%= render 'public/favorites/btn', post: post %>
      <h6 class="text-muted"><%= l post.created_at, format: :custom_short %></h6>
    </div>
  </div>
<% end %>
