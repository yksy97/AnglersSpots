<!--投稿一覧の「posts/_posts.html.erb」にレンダリング-->

  <% if customer_signed_in? && current_customer != customer %>
    <% if current_customer.following?(customer) %>
      <%= link_to customer_relationships_path(customer_id: customer.id, id: current_customer.relationships.find_by(followed_id: customer.id)), 
              remote: true, method: :delete, data: { confirm: 'フォローを解除しますか？' } do %>
        <i class="fa-solid fa-handshake-slash"></i>
      <% end %>
    <% else %>
      <%= link_to customer_relationships_path(customer_id: customer), remote: true, method: :post do %>
        <i class="fa-regular fa-handshake"></i>
      <% end %>
    <% end %>
  <% end %>

