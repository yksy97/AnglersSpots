<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h3 class="card-title">会員情報</h3>
          <%= render 'public/customers/info', customer: current_customer %>
        </div>
      </div>

      <!-- 新規登録モーダルボタン -->
      <div class="text-center">
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#NewBookModal">
          新規登録
        </button>
      </div>
    </div>

    <!-- 本の一覧 -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>本の一覧</h2>
        </div>
        <div class="card-body">
          <%= render 'public/books/books', books: @books %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 新規登録モーダル -->
<div class="modal fade" id="NewBookModal" tabindex="-1" role="dialog" aria-labelledby="NewBookModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="NewBookModalLabel">新規登録</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for @book, url: books_path, local: true, html: { class: "needs-validation", novalidate: '' } do |f| %>
          <div class="form-group">
            <%= f.label :title, "本のタイトル" %>
            <%= f.text_field :title, class: "form-control", required: true %>
            <div class="invalid-feedback">
              本のタイトルを入力してください
            </div>
          </div>
          <div class="form-group">
            <%= f.label :body, "本の説明" %>
            <%= f.text_area :body, class: "form-control", required: true %>
            <div class="invalid-feedback">
              本の説明を入力してください
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
            <%= f.submit "登録", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<%= javascript_pack_tag 'validations' %>
