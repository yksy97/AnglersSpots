<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <div class="row justify-content-between">
            <!--会員情報-->
            <div class="col-md-8">
              <%= render 'public/customers/customer_section', customer: current_customer %>
            </div>
            <!--検索フォーム-->
            <div class="col-md-4">
              <%= search_form_for @q, url: searches_path, class: 'form-inline d-flex justify-content-end' do |f| %>
                <%= f.label :rigs_name_or_post_comments_comment_or_genre_name_or_tackle_name_or_tackle_rod_or_tackle_reel_or_tackle_line_or_tackle_bait_cont, "検索ワード", class: 'sr-only' %>
                <%= f.search_field :rigs_name_or_post_comments_comment_or_genre_name_or_tackle_name_or_tackle_rod_or_tackle_reel_or_tackle_line_or_tackle_bait_cont, class: 'form-control', placeholder: "検索ワードを入力" %>
                <%= f.submit '検索', class: 'btn btn-primary ml-2' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

    <div class="col-md-8 mx-auto">
      <!-- ジャンル登録フォーム -->
      <div class="card mb-3">
        <div class="card-header d-flex justify-content-center" style="background-color: #AFDFE4;">
          <h2>魚種登録</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @genre, local: true, class: 'form-inline justify-content-center' do |form| %>
            <div class="form-group mr-2">
              <%= form.label :name, "ジャンル名", class: 'mr-2' %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>
            <%= form.submit "登録", class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>

      <!-- ジャンル一覧 -->
      <div class="card">
        <div class="card-header d-flex justify-content-center" style="background-color: #AFDFE4;">
          <h2>魚種一覧</h2>
        </div>
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>魚種</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td class="text-right">
                    <%= link_to '編集', edit_genre_path(genre), class: 'btn btn-success btn-sm', data: { toggle: 'modal', target: '#genreModal' + genre.id.to_s } %>
                    <%= link_to '削除', genre, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= paginate @genres %>
      </div>
    </div>
  </div>
</div>





<% @genres.each do |genre| %>
  <div class="modal fade" id="genreModal<%= genre.id %>" tabindex="-1" role="dialog" aria-labelledby="genreModalLabel<%= genre.id %>" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="genreModalLabel<%= genre.id %>">ジャンル編集</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form_with model: genre, local: true do |form| %>
            <div class="form-group">
              <%= form.label :name, "ジャンル名" %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>
            <div class="modal-footer">
              <%= form.submit "更新", class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

