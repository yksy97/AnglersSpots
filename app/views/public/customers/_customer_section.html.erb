
  <div class="container">
    <div class="row align-items-start justify-content-between">
      <!--メッセージ-->
      <div class="col-md">
        <% japan_time = Time.current.in_time_zone('Tokyo') %>
        <p class="mb-2">今日は<%= l japan_time, format: :custom_short %>です</p>
        <% if japan_time.hour >= 5 && japan_time.hour < 12 %>
          <p class="mb-0">おはようございます！</p>
        <% elsif japan_time.hour >= 12 && japan_time.hour < 18 %>
          <p class="mb-0">こんにちは！</p>
        <% else %>
          <p class="mb-0">こんばんは！</p>
        <% end %>
        
      </div>

      <!--会員名と新着通知、フォロー/フォロワー数-->
      <div class="col-md-3">
        <div class="d-flex align-items-center mb-2">
          <!--会員名-->
          <p class="mb-0"><%= link_to "#{current_customer.name} さん", customer_path(current_customer), class: "text-dark" %></p>
          <!--通知-->
          <% notifications_count = current_customer.notifications.where(read: false).where.not(customer_id: current_customer.id).count %>
          <% if notifications_count > 0 %>
          <!--通知あり-->
            <div type="button" data-toggle="modal" data-target="#notificationsModal" style="display: inline; color: yellow;">
              <i class="fa-regular fa-bell ml-2" style="margin-right: 0.3rem;"></i>
              <span style="margin-left: 0.3rem;"><%= notifications_count %></span>
            </div>
          <% else %>
          <!--通知なし-->
            <div type="button" data-toggle="modal" data-target="#notificationsModal" style="display: inline; color: grey;">
              <i class="fa-regular fa-bell ml-2"></i>
            </div>
          <% end %>
        </div>
        <div>
          <%= render "public/relationships/customer_follow_modal", customer: current_customer %>
        </div>
      </div>

      <!-- 新規投稿ボタンとタックル登録ボタン -->
      <div class="col-md-3">
        <div class="mb-2 text-center">
          <button type="button" data-toggle="modal" data-target="#NewPostModal">新規投稿</button>
        </div>
        <div class="text-center">
          <button type="button"  data-toggle="modal" data-target="#tackleModal">タックル登録</button>
        </div>
      </div>

      <!-- 検索フォーム -->
     <div class="col-md-3">
      <%= search_form_for @q, url: searches_path, class: 'form-inline' do |f| %>
        <div class="input-group">
          <%= f.search_field :rigs_name_or_post_comments_comment_or_genre_name_or_tackle_name_or_tackle_rod_or_tackle_reel_or_tackle_line_or_tackle_bait_cont, class: 'form-control', placeholder: "検索ワードを入力" %>
          <div class="input-group-append">
            <%= f.submit '検索', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  </div>




<!--通知のモーダル-->
<%= render 'public/notifications/notifications_modal' %>

<!--リレーションシップスのモーダル-->
<div id="relationships_modal_<%= current_customer.id %>">
  <%= render 'public/relationships/relationships_modal' %>
</div>

<!-- 新規投稿モーダル -->
<%= render 'public/posts/NewPostModal' %>

<!--新規タックルモーダル-->
<%#= render 'public/tackles/tackles_modal', tackle: @tackle %>
