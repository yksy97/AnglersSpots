<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
          <h2>マイページ</h2>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <h4 class="d-flex justify-content-between align-items-center">
              <span>登録情報</span>
              <%= link_to "編集", customers_information_edit_path, class: "btn btn-success btn-sm" %>
            </h4>
            <table class="table">
              <tbody>
                <tr>
                  <th width="30%">氏名</th>
                  <td><%= @customer.last_name %> <%= @customer.first_name %></td>
                </tr>
                <tr>
                  <th>カナ</th>
                  <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                  <th>郵便番号</th>
                  <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                  <th>住所</th>
                  <td><%= @customer.address %></td>
                </tr>
                <tr>
                  <th>電話番号</th>
                  <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td><%= @customer.email %></td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="d-flex justify-content-between mb-4">
            <h4 class="align-items-center">
              <%= link_to "配送先一覧", addresses_path, class: "btn btn-primary btn-sm" %>
            </h4>
            <h4 class="align-items-center">
              <%= link_to "注文履歴一覧", orders_path, class: "btn btn-success btn-sm" %>
            </h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
